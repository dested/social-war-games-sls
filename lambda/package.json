{
  "name": "swg-lambda",
  "version": "1.0.13",
  "description": "",
  "scripts": {
    "tsc": "npx tsc",
    "pretty": "npx prettier \"*/**/*.ts*\"  --config .prettierrc --write",
    "lint": "npx tslint -p tsconfig.json --fix",
    "pre": "npm run tsc & npm run pretty & npm run lint",
    "build-vote": "cross-env NODE_ENV=production webpack --progress --hide-modules --env.method=vote",
    "build-user-details": "cross-env NODE_ENV=production webpack --progress --hide-modules --env.method=user-details",
    "deploy-vote": "npm run build-vote && aws lambda update-function-code --function-name swg-vote --zip-file fileb://C:\\code\\swg\\lambda\\dist\\vote\\vote.zip --publish",
    "deploy-user-details": "npm run build-user-details && aws lambda update-function-code --function-name swg-user-details --zip-file fileb://C:\\code\\swg\\lambda\\dist\\user-details\\user-details.zip --publish"
  },
  "dependencies": {
    "aws-sdk": "^2.218.1",
    "esprima": "^4.0.0",
    "jsonwebtoken": "^8.1.0",
    "moment": "^2.22.0",
    "mongodb": "^3.0.1",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.8",
    "typescript": "^2.8.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/mongodb": "^2.2.18",
    "@types/node": "^8.0.28",
    "@types/passport": "^0.4.2",
    "@types/passport-jwt": "^3.0.0",
    "@types/redis": "^2.8.6",
    "jest": "^22.4.3",
    "nodemon": "^1.12.1",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "ts-loader": "^3.0.5",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^3.8.1",
    "zip-webpack-plugin": "2.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
