{
  "compilerOptions": {
    "module": "commonjs",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "strictNullChecks": false,
    "inlineSourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "outDir": "./bin",
    "baseUrl": "./src",
    "paths": {
      "@swg-server-common/*":["../../server-common/src/*"],
      "@swg-common/*":["../../common/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}