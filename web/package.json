{
  "name": "swg-web",
  "version": "1.0.0",
  "author": "Salvatore <dested@gmail.com>",
  "private": true,
  "scripts": {
    "pretty": "npx prettier \"*/**/*.ts*\"  --config .prettierrc --write",
    "lint": "npx tslint -p tsconfig.json --fix",
    "verify": "tsc --noEmit",
    "pre": "npm run tsc & npm run pretty & npm run lint",
    "dev": "webpack  --mode=development --progress --hide-modules --watch",
    "prod": "webpack  --mode=production --progress --hide-modules ",
    "deploy": "webpack  --mode=production --progress --hide-modules --env=deploy"
  },
  "dependencies": {
    "glamor": "^2.20.40",
    "glamorous": "^4.10.0",
    "hammerjs": "^2.0.8",
    "lodash": "4.17.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.7",
    "redux-thunk": "^2.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "aws-sdk": "^2.259.1",
    "aws-mqtt": "^0.2.2"
  },
  "devDependencies": {
    "@types/hammerjs": "^2.0.35",
    "@types/lodash": "4.14.109",
    "@types/react": "^16.0.17",
    "@types/react-dom": "^16.0.2",
    "@types/react-redux": "^6.0.0",
    "@types/react-router": "^4.0.25",
    "@types/react-router-dom": "^4.2.6",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
