{
  "compilerOptions": {
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "strict": true,
    "target": "es2015",
    "module": "commonjs",
    "inlineSourceMap": true,
    "strictNullChecks": false,
    "declaration": true,
    "pretty": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "./bin",
    "skipLibCheck": true
  }
}